<h4>Basket</h4>

<div id="card">
  {{#if notebooks.length}}
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each notebooks}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              <button class="js-remove btn btn-small" data-id="{{id}}">Delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <h5><b>Price: </b>
      <span class="price" >{{price}}</span></h5>
  {{else}}
    <div class=" mt-100">
      <div class="row ">
        <div class="col-md-12">
          <div class="card basket">
            <div class="card-body cart">
              <div class="col-sm-12 empty-cart-cls text-center">
                <img src="https://i.imgur.com/dCdf1KN.png" width="130" height="130" alt="" class="img-fluit mb-4 mr-3">
                <h3><strong>Your Cart is Empty</strong></h3>
                <h4>Add something to make me happy :)</h4>
                <a 
                  href="/notebooks"
                  class="btn btn-primary cart-btn-transform m-3" 
                  data-abs="true" 
                >continue shopping</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>