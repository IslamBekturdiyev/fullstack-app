<h3>Edit Notebook {{notebook.title}}</h3>


<form action="/notebooks/edit" method="POST" class="z-depth-1">
    <div class="input-field">
          <input  id="title" name="title" type="text" class="validate" required value="{{notebook.title}}">
          <label for="title">Notebooks model</label>
           <span class="helper-text" data-error="Enter Notebooks Name"></span>
        </div>
        <div class="input-field">
          <input  id="price" type="number" name="price" class="validate" required min="1" value="{{notebook.price}}">
          <label for="price">Price</label>
           <span class="helper-text" data-error="Enter Price"></span>
        </div>
        <div class="input-field">
          <input  id="img" type="text" name="img" class="validate" required value="{{notebook.img}}">
          <label for="img">URL Image</label>
           <span class="helper-text" data-error="Enter URL Image"></span>
        </div>
        <div class="input-field ">
          <input id="descr" name="descr" type="text" class="validate" required value="{{notebook.descr}}">
          <label for="descr">Description</label>
           <span class="helper-text" data-error="Enter Description"></span>
        </div>
        <input type="hidden" name="id" value="{{notebook.id}}">
        <button class="btn btn-prime">Edit Notebook</button>
</form>